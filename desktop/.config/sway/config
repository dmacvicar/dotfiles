exec dbus-update-activation-environment --systemd SWAYSOCK WAYLAND_DISPLAY XDG_CURRENT_DESKTOP XDG_SESSION_TYPE

set $mod Mod4
set $lock ~/.local/scripts/lock.sh
set $screenshot ~/.local/scripts/screenshot.sh
set $wallpaper ~/.wallpaper
set $term wezterm
set $menu wofi --show drun -I

set $lmonitor "LG Electronics LG HDR QHD 105NTSU2K566"
set $rmonitor "LG Electronics LG HDR QHD 105NTUW2K574"
set $laptop "eDP-1"

output $lmonitor pos 0 0 res 2560x1440
output $rmonitor pos 2560 0 res 2560x1440
output $laptop pos 0 0 res 1920x1080

#bindswitch --reload --locked lid:on output $laptop disable
#bindswitch --reload --locked lid:off output $laptop enable
#exec_always ~/.config/sway/scripts/clamshell.sh
exec_always {
  pkill kanshi
  kanshi &
}

input * {
    xkb_layout "de,es,us"
    xkb_options "caps:ctrl_modifier"
}

exec_always swaybg --output '*' --image ~/.wallpaper --color '#008899'

# border background text indicator child
client.focused #721045 #721045 fbf7f0
client.focused_tab_title #721045 #721045 fbf7f0
client.unfocused #000000 #000000 #fbf7f0

# Window borders
default_border pixel 1
default_floating_border normal
hide_edge_borders smart
titlebar_border_thickness 1
smart_gaps on

# Shortcuts
bindsym $mod+d exec $menu
bindsym $mod+Return exec $term
bindsym $mod+Print exec $screenshot
bindsym $mod+Shift+c reload
bindsym $mod+Shift+q kill
bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+l exec $lock

workspace_layout tabbed

# Move your focus around
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# _move_ the focused window with the same, but add Shift
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

workspace 1 outputs $rmonitor $laptop
workspace 2 outputs $rmonitor $laptop
workspace 3 outputs $rmonitor $laptop
workspace 4 outputs $rmonitor $laptop
# lets make the extra monitor its own workspace, but no
# more workspaces in the 2ndary monitor
workspace extra outputs $lmonitor

# note there is no way to jump to the 2ndary monitor
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4

bindsym $mod+Shift+1    move container to workspace 1
bindsym $mod+Shift+2    move container to workspace 2
bindsym $mod+Shift+3    move container to workspace 3
bindsym $mod+Shift+4    move container to workspace 4

bindsym $mod+Shift+minus move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

bindsym $mod+Next next_on_output
bindsym $mod+Prior workspace prev_on_output

workspace 1
focus output $rmonitor

bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle
# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

# move focus to the parent container
bindsym $mod+a focus parent

# Modes
mode "resize" {
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
	}
bindsym $mod+r mode "resize"

set $mode_system System: (l) lock, (e) logout, (s) suspend, (r) reboot, (S) shutdown, (R) UEFI
mode "$mode_system" {
    bindsym l exec $lock, mode "default"
    bindsym e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"
    bindsym Shift+r exec --no-startup-id systemctl reboot --firmware-setup, mode "default"

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"

for_window [app_id = "pcmanfm-qt"] floating enable
for_window [app_id = "^imv$"] floating enable, sticky enable
for_window [app_id="^pavucontrol$"] floating enable, sticky enable
for_window [app_id="^org.keepassxc.KeePassXC$"] floating enable
for_window [app_id="^org.pwmt.zathura$"] floating enable

for_window [window_role = "pop-up"] floating enable
for_window [window_role = "bubble"] floating enable
for_window [window_role = "dialog"] floating enable
for_window [window_type = "dialog"] floating enable
for_window [window_role = "task_dialog"] floating enable
for_window [window_type = "menu"] floating enable

for_window [title = "About Mozilla Firefox"] floating enable
for_window [window_role = "About"] floating enable
for_window [app_id="firefox" title="Library"] floating enable, border pixel 1, sticky enable
for_window [title = "Firefox - Sharing Indicator"] kill

